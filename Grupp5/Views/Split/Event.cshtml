@{ViewBag.Title = "Lägg till event";}
@model SplitEventVM

<h2>Lägg till event</h2>

<form asp-controller="Split" asp-action="Event">

	<label asp-for="Name"></label>
	<input asp-for="Name" placeholder="ex. Party på Ritz, Italienresa, Yoga-retreat ..." />
	<span asp-validation-for="Name"></span>

	<label asp-for="Description"></label>
	<input asp-for="Description" placeholder="(Frivilligt)" />

	<label asp-for="SelectedCurrency"></label>
	<select asp-for="SelectedCurrency" asp-items="Model.CurrencyItem"></select>
	<span asp-validation-for="SelectedCurrency"></span>

	<label asp-for="ExpenseCurrencyId"></label>
	<select asp-for="ExpenseCurrencyId" asp-items="Model.CurrencyItem"></select>
	<span asp-validation-for="ExpenseCurrencyId"></span>

	<label for="friendsTextBox">Vänner</label>
	<div class="friend-box" id="choosenFriends"></div>
	<input type="text" id="friendsTextBox" placeholder="Sök efter vänner" />
	<input type="hidden" asp-for="FriendIds" />

	<div class="friend-box" id="friend-box"></div>

	<input type="submit" value="Lägg till event" />

</form>

@section scripts {
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}