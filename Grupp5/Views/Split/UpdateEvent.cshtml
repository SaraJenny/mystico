@model SplitUpdateEventVM
@{ViewBag.Title = Model.Name;}

<h2>@Model.Name</h2>

<form asp-controller="Split" asp-action="UpdateEvent" class="addFriendsBox" eventId="@Model.EventId" id="updateEventForm">

	<label asp-for="Name"></label>
	<input asp-for="Name" placeholder="ex. Party på Ritz, Italienresa, Yoga-retreat ..." />
	<span asp-validation-for="Name"></span>

	<label asp-for="Description"></label>
	<input asp-for="Description" placeholder="(Frivilligt)" />

	<label asp-for="SelectedCurrency"></label>
	<select asp-for="SelectedCurrency" asp-items="Model.CurrencyItem"></select>
	<span asp-validation-for="SelectedCurrency"></span>

	<label for="friendsTextBox">Deltagare</label>
	@foreach (var item in Model.AlreadyParticipants)
	{
		<p class="friend participant">@item.FirstName @item.LastName</p>
	}
	<div class="friend-box" id="choosenFriends"></div>
	<input type="text" id="friendsTextBox" placeholder="Sök efter vänner" />
	<input type="hidden" asp-for="FriendIds" />

	<div class="friend-box" id="friend-box"></div>

	<input type="submit" value="Uppdatera event" />

</form>
<a class="delete" id="deleteEventButton" href=""><i class="fa fa-times" aria-hidden="true"></i> Stäng event</a>

@section scripts {
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}